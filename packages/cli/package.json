{
  "name": "@conduit/cli",
  "version": "0.1.0-alpha.1",
  "description": "Compiler and CLI tools for Conduit DI framework with tree-shaking optimization",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "conduit": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "pnpm run build",
    "test-compile": "conduit compile",
    "clean": "rimraf lib"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "ioc",
    "container",
    "typescript",
    "factory",
    "compile-time-safe",
    "framework",
    "serverless",
    "tree-shaking"
  ],
  "author": "Joseph Lyons",
  "license": "MIT",
  "files": [
    "lib/**/*",
    "README.md"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "jest": "^29.5.0",
    "prettier": "^3.6.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@conduit/di": "workspace:*",
    "commander": "^12.1.0",
    "ts-morph": "^27.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclyons52/conduit.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/jclyons52/conduit/issues"
  },
  "homepage": "https://github.com/jclyons52/conduit#readme"
}
