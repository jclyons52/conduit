{
  "name": "conduit-workspace",
  "version": "1.0.0",
  "description": "Conduit DI Framework - Workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "format": "prettier --write \"packages/**/*.ts\"",
    "clean": "npm run clean --workspaces",
    "example:build": "npm run build --workspace=packages/example",
    "example:test": "npm run test --workspace=packages/example"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "ioc",
    "container",
    "typescript",
    "factory",
    "compile-time-safe",
    "framework"
  ],
  "author": "Joseph Lyons",
  "license": "MIT",
  "files": [
    "lib/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclyons52/conduit.git"
  },
  "bugs": {
    "url": "https://github.com/jclyons52/conduit/issues"
  },
  "homepage": "https://github.com/jclyons52/conduit#readme",
  "dependencies": {
    "commander": "^14.0.1"
  }
}
